<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color: white for high contrast with dark text -->
    <solid android:color="#FFFFFF" />

    <!-- Border (stroke) with medium gray -->
    <stroke
        android:width="1dp"
        android:color="#777777" />

    <!-- Corner radius -->
    <corners android:radius="8dp" />


    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

</shape>
