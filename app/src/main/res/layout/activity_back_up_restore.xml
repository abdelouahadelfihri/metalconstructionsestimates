<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackUpRestore">

    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:background="#4F5EB1"
        app:layout_constraintBottom_toTopOf="@+id/googleSignIn"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/backuprestore"
        app:titleTextColor="@color/white" />


    <Button
        android:id="@+id/googleSignIn"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#4F5EB1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/google_drive_sign_in"
        app:layout_constraintBottom_toTopOf="@+id/localBackup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/localBackup"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#4F5EB1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/localBackup"
        app:layout_constraintBottom_toTopOf="@+id/localRestore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleSignIn" />

    <Button
        android:id="@+id/localRestore"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#4F5EB1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/localRestore"
        app:layout_constraintBottom_toTopOf="@+id/googleDriveBackup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localBackup" />

    <Button
        android:id="@+id/googleDriveBackup"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#4F5EB1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/googleDriveBackup"
        app:layout_constraintBottom_toTopOf="@+id/googleDriveRestore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localRestore" />

    <Button
        android:id="@+id/googleDriveRestore"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#4F5EB1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:text="@string/googleDriveRestore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleDriveBackup" />

</androidx.constraintlayout.widget.ConstraintLayout>