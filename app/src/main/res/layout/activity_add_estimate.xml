<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Add New Estimate"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for form content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Location EditText -->
            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/editTextAmountPaid"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontalChainStyle="spread"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" />

            <!-- Amount Paid EditText -->
            <EditText
                android:id="@+id/editTextAmountPaid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Amount Paid"
                app:layout_constraintStart_toEndOf="@id/editTextLocation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/editTextLocation"
                app:layout_constraintBottom_toBottomOf="@id/editTextLocation"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp" />

            <!-- Issue Date Label -->
            <TextView
                android:id="@+id/textViewIssueDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Date:"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/editTextLocation"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <!-- Issue Date Value -->
            <TextView
                android:id="@+id/textViewIssueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--/----"
                app:layout_constraintTop_toTopOf="@id/textViewIssueDateLabel"
                app:layout_constraintStart_toEndOf="@id/textViewIssueDateLabel"
                android:layout_marginStart="8dp" />

            <!-- Expiration Date Label -->
            <TextView
                android:id="@+id/textViewExpirationDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date:"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textViewIssueDateLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <!-- Expiration Date Value -->
            <TextView
                android:id="@+id/textViewExpirationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--/----"
                app:layout_constraintTop_toTopOf="@id/textViewExpirationDateLabel"
                app:layout_constraintStart_toEndOf="@id/textViewExpirationDateLabel"
                android:layout_marginStart="8dp" />

            <!-- Customer EditText -->
            <EditText
                android:id="@+id/editTextCustomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Customer"
                app:layout_constraintTop_toBottomOf="@id/textViewExpirationDateLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/buttonSelectCustomer"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" />

            <!-- Select Customer Button -->
            <Button
                android:id="@+id/buttonSelectCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Customer"
                app:layout_constraintTop_toTopOf="@id/editTextCustomer"
                app:layout_constraintBottom_toBottomOf="@id/editTextCustomer"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <!-- Discount EditText -->
            <EditText
                android:id="@+id/editTextDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Discount"
                app:layout_constraintTop_toBottomOf="@id/editTextCustomer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp" />

            <!-- VAT EditText -->
            <EditText
                android:id="@+id/editTextVAT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="VAT"
                app:layout_constraintTop_toBottomOf="@id/editTextDiscount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Guideline for bottom buttons -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottomButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuideEnd="80dp"
        app:orientation="horizontal" />

    <!-- Add Button -->
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonClear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

    <!-- Clear Button -->
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        app:layout_constraintStart_toEndOf="@id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>