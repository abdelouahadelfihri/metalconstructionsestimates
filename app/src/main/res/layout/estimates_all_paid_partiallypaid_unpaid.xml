<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_allEstimates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.4"
        android:background="@color/white"
        android:padding="15dp"
        android:text="@string/allEstimates"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView_paidEstimates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:padding="15dp"
        android:text="@string/paidEstimates"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView_unpaidEstimates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:padding="15dp"
        android:text="@string/unpaidEstimates"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView_partiallyPaidEstimates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:padding="15dp"
        android:text="@string/partiallyPaidEstimates"
        android:textColor="@color/black" />



</LinearLayout>