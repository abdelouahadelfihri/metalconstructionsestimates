<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_discount"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="@string/discount">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_discount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:maxLength="2"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_total_after_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/totalExcludingTaxAfterDiscount">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_total_after_discount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="56dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>