<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white">

    <!-- Wrap content in ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_clear_button_add_customer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_customer_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4F5EB1"
                android:theme="?attr/actionBarTheme"
                app:title="@string/addCustomer"
                app:titleTextColor="@android:color/white" />

            <!-- TextInputLayouts -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/customer_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_customer_name_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F4F4F4"
                    android:inputType="text"
                    android:textColor="#595959" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_customer_email_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/customer_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_customer_email_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F4F4F4"
                    android:inputType="textEmailAddress"
                    android:textColor="#595959" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_customer_phone_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/customer_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_customer_phone_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F4F4F4"
                    android:inputType="number"
                    android:textColor="#595959" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_customer_mobile_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/customer_mobile">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_customer_mobile_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F4F4F4"
                    android:inputType="number"
                    android:textColor="#595959" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_customer_fax_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/customer_fax">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_customer_fax_add"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#595959"
                    android:background="#F4F4F4"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_customer_address_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/customer_address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_customer_address_add"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:textColor="#595959"
                    android:background="#F4F4F4"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fixed button at the bottom -->
    <com.example.metalconstructionsestimates.customviews.AddClearButtons
        android:id="@+id/add_clear_button_add_customer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="center"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>