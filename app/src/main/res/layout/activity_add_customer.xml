<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_customer_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#4F5EB1"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_customer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:title="@string/addCustomer"
        app:titleTextColor="@android:color/white" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/customer_name"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_customer_email_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_customer_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_customer_name_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#595959"
            android:background="#F4F4F4"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_customer_email_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/customer_email"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_customer_phone_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_customer_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_customer_email_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#595959"
            android:background="#F4F4F4"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_customer_phone_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/customer_phone"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_customer_mobile_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_customer_email_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_customer_phone_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#595959"
            android:background="#F4F4F4"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_customer_mobile_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/customer_mobile"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_customer_fax_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_customer_phone_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_customer_mobile_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#595959"
            android:background="#F4F4F4"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_customer_fax_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/customer_fax"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout_customer_adress_customer_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_customer_mobile_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_customer_fax_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#595959"
            android:background="#F4F4F4"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_customer_adress_customer_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="166dp"
        android:hint="@string/customer_address"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/add_clear_button_add_customer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_customer_fax_add">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_customer_address_add"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:textColor="#595959"
            android:background="#F4F4F4"
            android:inputType="textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.example.metalconstructionsestimates.customviews.AddClearButtons
        android:id="@+id/add_clear_button_add_customer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_customer_adress_customer_add" />

</androidx.constraintlayout.widget.ConstraintLayout>